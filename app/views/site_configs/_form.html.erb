<% form_for @site_config do |f| %>
  <%= f.error_messages %>
  
  <p>
    <%= f.label :value, "Current value" %><br />
		<% if @site_config.value.size > 8 %>
			<%= f.text_area :value, :rows => 3, :cols => 60 %>
		<% else -%>
	    <%= f.text_field :value, :size => 10 %>
		<% end -%>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 2, :cols => 60 %>
  </p>
	<p>
		<em>Clicking submit will restart the server.  Please wait and do not click twice.</em>
	</p>
  <p><%= f.submit "Submit" %></p>
<% end %>

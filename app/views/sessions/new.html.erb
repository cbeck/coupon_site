<% @title = "Log In" %>

<% form_tag session_path do -%>
<p><%= label_tag 'Email' %><br />
<%= text_field_tag 'email', @email, :size => 30 %></p>

<p><%= label_tag 'password' %><br/>
<%= password_field_tag 'password', nil %></p>

<p><%= label_tag 'remember_me', 'Remember me' %>
<%= check_box_tag 'remember_me', '1', @remember_me %></p>

 <% unless params[:coupon_id].blank? %>
    <%= hidden_field_tag :coupon_id, params[:coupon_id] %>
  <% end %>

<p><%= submit_tag 'Log in' %></p>

<% end -%>

<p><%=link_to 'Forgot password?', forgot_password_path %></p>

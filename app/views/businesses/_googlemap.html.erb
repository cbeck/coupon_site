<% if google_maps?(location) %>
	<% content_for("page_scripts") do -%>
		<script src="http://maps.google.com/maps?file=api&amp;v=2&amp;key=<%= @current_domain.google_key -%>"
		      type="text/javascript"></script>
		<script type="text/javascript">
			//<![CDATA[
			function load() {
			  if (GBrowserIsCompatible()) {
					var location = new GLatLng(<%=location.latitude%>, <%=location.longitude%>);
			    var map = new GMap2(document.getElementById("map"));
					map.setCenter(location, 13);
					
			    map.addControl(new GMapTypeControl());
					map.addControl(new GSmallZoomControl());
					map.addOverlay(new GMarker(location));
			  }
			}
			//]]>
		</script>
	<% end -%>
	<% content_for("body_events") do -%>
	 	onload="load()" onunload="GUnload()"
	<% end -%>
<% end -%>
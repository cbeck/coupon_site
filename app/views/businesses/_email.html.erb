<% fields_for "business[data][email_address][]", email do |f| -%>
	<div class="point_of_contact" id="<%= dom_id(email) %>">
		<%= f.label :address, 'Email:' %>
		<%= f.text_field :address, :size => 25, :index => nil %>
		<%= f.label :label %>
		<%= f.text_field :label, :size => 10, :index => nil %>
		<% unless email.required -%>
			<%= remove_item_link('email', email, 'remove_email', "#{dom_id(email)}") %>
		<% end -%>
		<%= existing_field_id(f, email) %>
	</div>
<% end -%>
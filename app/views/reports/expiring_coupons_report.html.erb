<% @title = "Expiring Coupons Report" %>

<% form_tag expiring_coupons_report_path, :method => :get do %>
  <p>
    <%= label_tag :expired_on, "View coupons expiring by" %><br />
    <%= calendar_date_select_tag 'expired_on', "#{@expiring_date}"%>  
    <%= submit_tag "Submit"%>
  </p>
<% end %>
<a name="expiring"></a>
<table class="data">
  <th class="actions_4">Action</th>
  <th>ID</th>
  <th><%= render_sort_link("expiring", "business_name", @expiring_sort) %></th>
  <th>Coupon</th>
  <th>Offer</th>
  <th><%= render_sort_link("expiring", "start_date", @expiring_sort) %></th>
  <th><%= render_sort_link("expiring", "end_date", @expiring_sort) %></th>
  <% unless @expiring.blank? %>
    <%= render :partial => "coupon_templates/coupon_template", :collection =>  @expiring, :locals => {:show_business => true, :prefix => 'expiring_'} %>
  <% else %>
    <tr><td colspan="7"><p class="margin_top_10">There are no expiring coupons that expire between today and the date set above.</p></td></tr>
  <% end %>
</table>

<p class="margin_top_10"><%= link_to "Go back to all reports", reports_path %></p>
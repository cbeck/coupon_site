<% @title = "No Active Coupons Report" %>

<% form_tag no_active_coupons_report_path, :method => :get do %>
  <p>
    <%= label_tag :begin_on, "View business accounts with no active coupons since" %><br />
    <%= calendar_date_select_tag 'begin_on', "#{@beginning_date}"%>  
    <%= submit_tag "Submit"%>
  </p>
<% end %>
<a name="expiring"></a>
<table class="data">
  <th class="actions_3">Action</th>
  <th><%= render_sort_link("expiring", "business_name", @beginning_sort) %></th>
  <th>Billing Name</th>
  <th>Internal Identifier</th>
  <% unless @accounts.blank? %>
    <%= render :partial => "accounts/account", :collection =>  @accounts, :locals => {:prefix => 'no_active_'} %>
  <% else %>
    <tr><td colspan="7"><p class="margin_top_10">There are no accounts that had no active coupons between today and the date set above.</p></td></tr>
  <% end %>
</table>

<p class="margin_top_10"><%= link_to "Go back to all reports", reports_path %></p>
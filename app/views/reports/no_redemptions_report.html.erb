<% @title = "No Redemptions Report" %>

<% form_tag no_redemptions_report_path, :method => :get do %>
  <p>
    <%= label_tag :begin_on, "View available coupons with no redemptions since" %><br />
    <%= calendar_date_select_tag 'begin_on', "#{@beginning_date}"%>  
    <%= submit_tag "Submit"%>
  </p>
<% end %>
<a name="not_redeemed"></a>
<table class="data">
  <th class="actions_4">Action</th>
  <th>ID</th>
  <th><%= render_sort_link("not_redeemed", "business_name", @not_redeemed_sort) %></th>
  <th>Coupon</th>
  <th>Offer</th>
  <th><%= render_sort_link("not_redeemed", "start_date", @not_redeemed_sort) %></th>
  <th><%= render_sort_link("not_redeemed", "end_date", @not_redeemed_sort) %></th>
  <% unless @not_redeemed.blank? %>
    <%= render :partial => "coupon_templates/coupon_template", :collection =>  @not_redeemed, :locals => {:show_business => true, :prefix => 'not_redeemed_'} %>
  <% else %>
    <tr><td colspan="7"><p class="margin_top_10">There are no coupons that have not been redeemed between the date set above and today.</p></td></tr>
  <% end %>
</table>

<p class="margin_top_10"><%= link_to "Go back to all reports", reports_path %></p>
<% @title = "Manage Affiliate Groups #{link_to image_tag('add.png'), new_affiliate_group_path, :title => 'New affiliate group'}" %>

<%= render :partial => "shared/admin_menu" %>
<p>Affiliate Groups are used to create collections of affiliates that can be associated together for common web sites. To view or create affiliates, <%= link_to 'go here', affiliates_path %>.</p>

<table class="data">
  <tr>
    <th></th>
    <th>Name</th>
    <th>Description</th>
  </tr>

<% @affiliate_groups.each do |affiliate_group| %>
  <% menu_id = "item_menu_#{affiliate_group.id}" %>
  <tr onmouseover="$('<%=menu_id%>').style.visibility='visible'" 
      	  onmouseout="$('<%=menu_id%>').style.visibility='hidden'" class="<%= cycle("odd", "even") -%>" id="<%=dom_id(affiliate_group)%>">
    <td>  <div id="<%=menu_id%>" class="item_menu">
  		<%= link_to(image_tag('bin.png', :title=>"Delete this affiliate group"), affiliate_group, 
  				:confirm => "This will permanently remove this affiliate group from our system. This cannot be undone. Are you sure you want to do this?", 
					:method => :delete) %>
  	  <%= link_to image_tag('pencil.png', :title=>"Edit this affiliate group"), 
  					edit_ad_path(affiliate_group) %>
  	  </div>
  	</td>
    <td><%= link_to affiliate_group.name, affiliate_group %></td>
    <td><%= affiliate_group.description %></td>
  </tr>
<% end %>
<% if @affiliate_groups.blank? %>
  <tr><td colspan="3">There are no affiliate groups currently in the system.</td></tr>
<% end %>
</table>

<br />

<%= link_to 'New Affiliate Group', new_affiliate_group_path %> | <%= link_to 'Manage Affiliates', affiliates_path %> | <%= link_to 'Place an Affiliate in an Affiliate Group', affiliate_group_memberships_path %>

<div class="clear_fix"></div>
